<% layout("/layouts/boilerplate") %>
    

    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h3>New User</h3>
            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label" >Username</label>
                    <input name="username" class="form-control" type="text" required id="username">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label" >Email</label>
                    <input name="email" class="form-control" type="text" required id="email">
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label" >Password</label>
                    <input name="password" class="form-control" type="password" required id="password">
                </div>

                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>

    
